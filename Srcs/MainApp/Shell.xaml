<Window x:Class="MainApp.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://www.codeplex.com/prism"
        xmlns:inf="clr-namespace:FirstPrismApp.Infrastructure;assembly=FirstPrismApp.Infrastructure"
        Title="Shell">
    <DockPanel LastChildFill="True">
        <!--<ContentControl DockPanel.Dock="Top" prism:RegionManager.RegionName="{x:Static inf:RegionConstants.ToolbarRegion}" />-->
        <!--<ItemsControl DockPanel.Dock="Top" prism:RegionManager.RegionName="{x:Static inf:RegionConstants.ToolbarRegion}" />-->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" prism:RegionManager.RegionName="{x:Static inf:RegionConstants.ToolbarRegion}" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ContentControl prism:RegionManager.RegionName="{x:Static inf:RegionConstants.ItemsRegion}" />
            <ContentControl prism:RegionManager.RegionName="{x:Static inf:RegionConstants.DetailsRegion}" Grid.Column="1"/>
        </Grid>
    </DockPanel>
</Window>