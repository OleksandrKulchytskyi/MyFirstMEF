<Window x:Class="MainAppMEF.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://www.codeplex.com/prism"
        xmlns:inf="clr-namespace:Core.Infrastructure;assembly=Core.Infrastructure"
        Title="Shell">
    <DockPanel LastChildFill="True">
        <ItemsControl DockPanel.Dock="Top" prism:RegionManager.RegionName="{x:Static inf:RegionConstants.ToolbarRegion}" />
        <ContentControl prism:RegionManager.RegionName="{x:Static inf:RegionConstants.ContentRegion}" />
    </DockPanel>
</Window>